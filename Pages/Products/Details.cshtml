@page "{uid}"
@model DetailsModel


<div>
    <a asp-page="./Index">Back to List</a>
</div>

@{
    ViewData["Title"] = Model.ProductResponse.ProductName;
}

<div class="products">
    <div class="container">
        <div class="row">
            <div class="col-md-6 single-top-left vcenter">
                <ul class="slides">
                    <li data-thumb="@Model.ProductResponse.Image1">
                        <img class="slides-image" src="~/@Model.ProductResponse.Image1" alt="" width="200px" height="200px" />
                    </li>
                </ul>
            </div>

            <div class="col-md-6 single-top-right vcenter">
                <h3>@Model.ProductResponse.ProductName</h3>
                <p><b>SKU:</b> @Model.ProductResponse.SKU</p>
                <p><b>Description:</b> @Model.ProductResponse.Description</p>
                <p><b>Quantity:</b> @Model.ProductResponse.Quantity</p>
                <p class="actual-price"><b>Price:</b> $@Model.ProductResponse.Price</p>
            </div>
        </div>
    </div>
</div>
